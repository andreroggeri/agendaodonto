{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "paths": {
        "@app/*": ["../src/app/*"]
    },
    "include": ["**/*.ts", "../src/app/shared/interfaces/**/*.ts"]
}
